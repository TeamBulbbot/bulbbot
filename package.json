{
	"name": "bulbbot",
	"version": "0.0.1",
	"description": "A discord moderation bot written in Discord.JS",
	"main": "src/index.ts",
	"scripts": {
		"watch": "tsc -w",
		"prestart": "tsc && node ./scripts/writeEnUsJson.js",
		"start": "node build/index.js",
		"nobuild": "node build/index.js",
		"dev": "nodemon build/index.js --ignore ./files",
		"pm2-start": "pm2 start build/index.js --watch --output ./logs/log.log --error ./logs/error.log --time --name bulbbot",
		"sync:db": "node build/utils/database/sync.js",
		"delete:build": "rimraf build/*"
	},
	"repository": "git+https://github.com/TeamBulbbot//Bulbbot.git",
	"author": "Team Bulbbot",
	"license": "Creative Commons Attribution-NonCommercial-NoDerivatives 4.0 International License",
	"bugs": {
		"url": "https://github.com/TeamBulbbot//Bulbbot/issues"
	},
	"homepage": "https://github.com/TeamBulbbot//Bulbbot#readme",
	"dependencies": {
		"@hapi/hapi": "^20.2.1",
		"@messageformat/runtime": "^3.0.0",
		"@sentry/node": "^6.17.4",
		"@sentry/tracing": "^6.17.4",
		"axios": "^0.25.0",
		"discord.js": "^13.6.0",
		"discord.js-pagination": "^1.0.3",
		"dotenv": "^16.0.0",
		"emoji-unicode": "^2.0.1",
		"i18next": "^21.6.10",
		"i18next-icu": "^2.0.3",
		"imghash": "^0.0.9",
		"install": "^0.13.0",
		"intl-messageformat": "^9.11.3",
		"js-yaml": "^4.1.0",
		"moment": "^2.29.1",
		"moment-timezone": "^0.5.34",
		"node-cron": "^3.0.0",
		"parse-duration": "^1.0.2",
		"pg": "^8.7.1",
		"pg-hstore": "^2.3.4",
		"prom-client": "^14.0.1",
		"safe-timers": "^1.1.0",
		"sequelize": "^6.15.0",
		"sharp": "^0.30.0",
		"shelljs": "^0.8.5",
		"unicode": "^14.0.0",
		"winston": "^3.5.1"
	},
	"devDependencies": {
		"@messageformat/core": "^3.0.0",
		"@types/glob": "^7.2.0",
		"@types/sharp": "^0.29.5",
		"prettier": "^2.5.1",
		"sequelize-cli": "^6.4.1",
		"typescript": "^4.5.5"
	}
}
